<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册 （post 表单)"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="registerclick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录 （post表单）"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="loginClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get 请求(获取用户信息 )"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="getUserInfoClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="put 请求(修改昵称 )"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="changeNickNameClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post 请求(注销 )"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="destroyUserClick"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传图片"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:background="@android:color/holo_blue_light"
        android:onClick="uploadClick"
        />

</LinearLayout>